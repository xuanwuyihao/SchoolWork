	height: 28px;
	display: inline-block;
	border: 1px solid #d2ccc4;
	background: #fcfcfb url(images/ico.gif) no-repeat 97px center;
	line-height: 28px;
	font-weight: bold;
	padding-left: 10px;
	cursor: pointer;
	width: 90px;
	padding-right: 12px;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	position: relative;
	z-index: 99;
}

.select dt:hover, .select dt.cur {
	border: 1px solid #409DFE;
	box-shadow: 0 0 3px #409DFE;
}

.select dd {
	position: absolute;
	left: 0;
	top: 29px;
	border: 1px solid #d2ccc4;
	background: #fff;
	display: none;
}

.select dd ul {
	padding: 4px;
	width: 104px;
	max-height: 250px;
	overflow: auto;
}

