/**index.wxss**/
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info view {
  margin-right: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.list view {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid silver;
  padding: 20rpx;
  color:#aaa;
}

.list image {
  width: 60rpx;
  height: 60rpx;
}

.list text {
  margin-left: 20rpx;
}

.swiper-image image {
  width: 400px;
  height: 200px;
}

.products {
  margin-right: 10rpx;
  margin-left: 10rpx;
  height: 700rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.products .detail {
  width: 48%;
  height: 100%;
  border: 1rpx solid silver;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
}

.products image {
  width: 100%;
  height: 350rpx;
}
